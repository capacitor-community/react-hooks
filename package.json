{
  "name": "@capacitor-community/react-hooks",
  "version": "0.0.11",
  "description": "React Hooks for Capacitor apps",
  "keywords": [
    "react",
    "capacitor",
    "hooks",
    "ionic framework",
    "ionic"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/capacitor-community/react-hooks.git"
  },
  "main": "dist/esm/index.js",
  "typings": "dist/esm/index.d.ts",
  "scripts": {
    "start": "node scripts/start.js",
    "build": "npm run clean && npm run transpile && npm run copy-package",
    "copy-package": "cp ./package.json ./dist/package.json",
    "package": "npm pack ./dist",
    "deploy": "npm run build && npm test && np",
    "rollup": "rollup --config rollup.config.js",
    "transpile": "tsc --module ES2015 --target es2017 --outDir dist",
    "clean": "rimraf dist",
    "build-old": "node scripts/build.js",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "@capacitor/app": "*",
    "@capacitor/browser": "*",
    "@capacitor/core": ">=3.0.0",
    "@capacitor/camera": "*",
    "@capacitor/clipboard": "*",
    "@capacitor/device": "*",
    "@capacitor/filesystem": "*",
    "@capacitor/geolocation": "*",
    "@capacitor/keyboard": "*",
    "@capacitor/network": "*",
    "@capacitor/screen-reader": "*",
    "@capacitor/storage": "*"
  },
  "devDependencies": {
    "@capacitor/app": "^0.3.3",
    "@capacitor/browser": "^0.4.3",
    "@capacitor/core": "^3.0.0-beta.2",
    "@capacitor/camera": "^0.4.0",
    "@capacitor/clipboard": "^0.4.3",
    "@capacitor/device": "^0.5.3",
    "@capacitor/filesystem": "^0.4.0",
    "@capacitor/geolocation": "^0.4.0",
    "@capacitor/keyboard": "^0.5.3",
    "@capacitor/network": "^0.4.3",
    "@capacitor/screen-reader": "^0.3.3",
    "@capacitor/storage": "^0.3.3",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^24.0.23",
    "@types/react-test-renderer": "^16.9.1",
    "conventional-changelog": "^3.1.4",
    "jest": "^26.6.3",
    "jest-environment-jsdom-fourteen": "^0.1.0",
    "np": "^6.3.2",
    "react": "^16.11.0",
    "react-app-polyfill": "^1.0.4",
    "react-test-renderer": "^16.11.0",
    "replace": "^1.1.0",
    "rimraf": "^2.6.1",
    "ts-jest": "^26.5.1",
    "tslint": "^5.6.0",
    "tslint-ionic-rules": "0.0.8",
    "typedoc": "^0.14.2",
    "typescript": "~4.0.3",
    "uglify-js": "^3.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      "dist-transpiled",
      "dist",
      "test-app"
    ],
    "modulePaths": [
      "<rootDir>"
    ]
  }
}
