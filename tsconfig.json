{
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "importHelpers": false,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es2017"
  },
  "include": [
    "src/**/index.ts"
  ]
}
